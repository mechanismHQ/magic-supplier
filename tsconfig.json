{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "types": ["./src/types/electrum-client", "jest"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
